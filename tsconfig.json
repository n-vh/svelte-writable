{
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "module": "ES6",
    "declaration": true,
    "moduleResolution": "node",
    "declarationDir": "lib/types",
    "emitDeclarationOnly": true,
    "types": ["vitest"],
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["lib", "node_modules"]
}
